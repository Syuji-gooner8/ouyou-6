<table class='table'>
<thead>
 <th><%=link_to "グループを作成する",new_group_path %> |
     <%=link_to "グループ一覧",groups_path %></th>
<tr>
<th>image</th>
<th>name</th>
<th colspan="3"></th>
</tr>
</thead>
<tbody>
<% @users.each do |user| %>
<tr>
<td><%= image_tag user.get_profile_image(100,100) %></td>
<td><%= user.name %></td>
<td>フォロー数<%= link_to user.followings.count, users_path %></td>
 <td>フォロワー数<%= link_to user.followers.count, users_path %></td>
 <% if current_user.following?(user) %>
  <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %></td>
<% else %>
  <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
<% end %>
<td><%= link_to "Show", user %></td>

</tr>
<% end %>
</tbody>
</table>

